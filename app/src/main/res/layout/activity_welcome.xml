<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.maxstow.unofficialtwucampusmapgame.Welcome">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/continueButtonText"
        android:id="@+id/welcomeContinueButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcomeText1"
        android:id="@+id/welcomeText1"
        android:textSize="17dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/welcomeText2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcomeText2"
        android:id="@+id/welcomeText2"
        android:textSize="17dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/welcomeContinueButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/userNamePrinted"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/welcomeContinueButton"
        android:layout_alignLeft="@+id/welcomeContinueButton"
        android:layout_alignStart="@+id/welcomeContinueButton"
        android:layout_alignRight="@+id/welcomeContinueButton"
        android:layout_alignEnd="@+id/welcomeContinueButton" />
</RelativeLayout>
